<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <ViewSettingsDialog
        id="settingsDialog"
        confirm="handleConfirm2"
        cancel="handleCancel"
        resetFilters="handleResetFilters">
        <filterItems>
            <ViewSettingsFilterItem text="Pr No" key="PR_NO" items="{supplier>/value}">
                <items>
                    <ViewSettingsItem text="{supplier>PR_NO}" key="{supplier>PR_NO}" />
                        </items>
                </ViewSettingsFilterItem>       
        </filterItems>
    </ViewSettingsDialog>
</core:FragmentDefinition>