<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<Dialog id="DeleteDialog" title="Confirmation" titleAlignment="Center" state="Information">
		<f:SimpleForm>
   			<f:content>
   				<Text text="Are sure you want add product? "/>
   			</f:content>
   		</f:SimpleForm>
		<buttons>
			<Button icon="sap-icon://accept" text="Yes" type="Emphasized" press="productAdded"/>
			<Button icon="sap-icon://decline" text="No" press="cancleproduct" type="Ghost"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>