<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog title="Select Retailer" contentHeight="40%" draggable="true"
		class="sapUiSizeCompact">
		<subHeader>
			<Toolbar>
				<SearchField id="retailerSrchId" liveChange="handleRetailerSearch" />
			</Toolbar>
		</subHeader>

		<List id="retailer_listId" items="{retailerModelFrag>/}"
			mode="SingleSelectMaster" selectionChange="handleRetailerSelection">
			<StandardListItem title="{retailerModelFrag>RETAILER_NAME}" description="{retailerModelFrag>RETAILER_ID}"/>

		</List>
		<buttons>
			<!-- <Button text="Submit" press="submitQtyDialog" type="Emphasized"/> -->
			<Button text="Cancel" press="retailerDialogClose" type="Emphasized" />
		</buttons>
	</Dialog>
</core:FragmentDefinition>