<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog title="Select Region"
		class="sapUiSizeCompact">
		<subHeader>
			<Toolbar>
				<SearchField id="regionSrchId" liveChange="handleRegionSearch" />
			</Toolbar>
		</subHeader>

		<List id="region_listId" items="{regionMasterDataModel>/}"
			mode="SingleSelectMaster" selectionChange="handleRegion">
			<StandardListItem title="{regionMasterDataModel>BEZEI}" description="{regionMasterDataModel>BLAND}" iconInset="true"/>

		</List>
		<buttons>
			<Button text="Cancel" press="closeRegionDialog" type="Emphasized" />
		</buttons>
	</Dialog>
</core:FragmentDefinition>